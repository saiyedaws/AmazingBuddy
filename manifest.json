{
    "manifest_version": 2,
    "name": "Amazon Buddy",
    "version": "2.0.3",
    "permissions": [
      "<all_urls>",
      "storage", "clipboardWrite", "clipboardRead", "storage", "contextMenus", "tabs", "activeTab", "http://*/", "https://*/", "identity" 
    ],


    "description": "Amazon Buddy",
    "icons": { "16": "icons/icon16.png",
      "48": "icons/icon48.png",
     "128": "icons/icon128.png" },

    "options_page": "options/options.html",


    "content_scripts": [
  
      {
        "matches": ["https://www.amazon.ca/gc/redeem*", "https://www.amazon.ca/portal-migration/gc/*"],
        "js": ["libraries/jquery.min.js", "libraries/highlight-within-textarea-master/jquery.highlight-within-textarea.js","libraries/custom.js", "amazon/amazon_redeem.js", "amazon/amazon_redeem_logbox.js"],
        "css": ["amazon/amazon_redeem.css","libraries/highlight-within-textarea-master/jquery.highlight-within-textarea.css","amazon/amazon_redeem_logbox.css"],
        "run_at": "document_end"
      },
      {
        "matches": ["https://www.amazon.ca/gc/balance/*","https://www.amazon.ca/gc/balance/ref=gc_balance_legacy_to_newgcf?_encoding=UTF8&ref_=ya_d_c_gc"],
        "js": ["libraries/custom.js", "amazon/amazon_gc_balance.js"],
        "run_at": "document_end"
      }
    


    ],



    "browser_action": {
      "default_popup": "popup/popup.html"
    },


    "background": 
    {
   
      "page": "background/background.html",
      "persistent": false
    },


    "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
  }