{
    "manifest_version": 2,
    "name": "Amazon Buddy",
    "version": "1.5",
    "permissions": [
      "<all_urls>",
      "storage", "clipboardWrite", "clipboardRead", "storage", "contextMenus", "tabs", "activeTab", "http://*/", "https://*/", "identity" 
    ],


    "description": "Amazon Buddy",
    "icons": { "16": "icons/icon16.png",
      "48": "icons/icon48.png",
     "128": "icons/icon128.png" },

    "options_page": "options/options.html",


    "content_scripts": [
  
      {
        "matches": ["https://www.amazon.ca/gc/redeem?*", "https://www.amazon.ca/portal-migration/gc/*"],
        "js": ["libraries/jquery.min.js","libraries/custom.js", "amazon/amazon_redeem.js"],
        "run_at": "document_end"
      },
      {
        "matches": ["*://amazon.ca/gp/buy/*", "*://*.amazon.ca/gp/buy/*","https://www.amazon.ca/gp/buy/spc/handlers/*"],
        
        "js": ["libraries/jquery.min.js","libraries/custom.js", "amazon/amazon_order_final.js"],
        "css": ["amazon/amazon_order_final.css"],
        "run_at": "document_end"
      }
    
    


    ],



    "browser_action": {
      "default_popup": "popup/popup.html"
    },


    "background": 
    {
   
      "page": "background/background.html",
      "persistent": false
    },


    "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
  }